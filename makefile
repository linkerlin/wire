ci: coverage tests benchmarks

coverage:
	go test -cover ./mtcp/...
	go test -cover ./msocks/...
	go test -cover ./internal/...
	go test -cover ./mlisten/...

tests:
	go test -v -race ./mtcp/...
	go test -v -race ./msocks/...
	go test -v -race ./internal/...
	go test -v -race ./mlisten/...

benchmarks:
	go test -run=xXX -bench=. ./mtcp/...
	go test -run=xXX -bench=. ./msocks/...
